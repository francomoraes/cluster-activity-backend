{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./types", "./node_modules/@types"],
        "types": ["express"]
    },
    "include": [
        "./controllers/**/*.ts",
        "./db/**/*.ts",
        "./helpers/**/*.ts",
        "./models/**/*.ts",
        "./public/**/*.ts",
        "./routes/**/*.ts",
        "./index.ts",
        "types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
